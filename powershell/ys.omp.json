{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "style": "plain",
                    "template": "<lightYellow>{{ .UserName }}</> <darkGray>@</> <lightGreen>{{ .HostName }}</> ",
                    "type": "session"
                },
                {
                    "foreground": "lightCyan",
                    "style": "plain",
                    "template": "<darkGray>: </>{{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "red",
                    "style": "plain",
                    "template": " C:{{ if gt .Code 0 }}{{ .Code }}{{ end }} ",
                    "type": "exit"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "newline": false,
            "segments": [
                {
                    "style": "plain",
                    "template": "<white>git:</>{{ .HEAD }} ",
                    "type": "git"
                },
                {
                    "foreground": "darkGray",
                    "style": "plain",
                    "template": "[{{ .CurrentDate | date .Format }}]",
                    "type": "time"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "lightRed",
                    "style": "plain",
                    "template": "7>",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}
