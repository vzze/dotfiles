    "clangd.path": "~\\AppData\\Local\\coc\\extensions\\coc-clangd-data\\install\\14.0.3\\clangd_14.0.3\\bin\\clangd.exe",
    "clangd.fallbackFlags": [
        "-std=c++20",
        "-Wall",
        "-Wextra",
        "-Wconversion",
        "--target=x86_64-w64-mingw32"
    ],

    "clangd.inlayHints.enable": true,
    "clangd.inlayHints.sep": "| ",

    "coc.preferences.formatOnType": true,
    "coc.preferences.bracketEnterImprove": true,

    "suggest.virtualText": true,

    "pairs.alwaysPairCharacters": [ "(", "[", "{", "<", "'", "\"", "`"],
    "pairs.enableBackspace": true,
    "pairs.enableCharacters": [ "(", "[", "{", "<", "'", "\"", "`" ],

    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.virtualText": true,
    "diagnostic.hintSign": "h",
    "diagnostic.errorSign": "!",
    "diagnostic.warningSign": ">>",
    "diagnostic.infoSign": "?",

    "git.enableGlobalStatus": true,
    "git.enableGutters": true,
    "git.realtimeGutters": true,
    "git.addedSign.text": "+",
    "git.changedSign.text": "~",
    "git.removedSign.text": "_",
    "git.topRemovedSign.text": "-",
    "git.changeRemovedSign.text": "/",
    "git.topRemovedSign.hlGroup": "DiffAdd",
    "git.addedSign.hlGroup": "DiffAdd",
    "git.changedSign.hlGroup": "DiffAdd",
    "git.removedSign.hlGroup": "DiffAdd",
    "git.conflict.incoming.hlGroup": "DiffAdd",
    "git.conflict.current.hlGroup": "DiffAdd",
    "git.changeRemovedSign.hlGroup": "DiffAdd",
    "git.addGBlameToBufferVar": true,
